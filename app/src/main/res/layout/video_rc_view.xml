<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/video_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:background="@color/white"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/video"/>
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="53dp"
            android:src="@drawable/video_1"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ep_name"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Chapter One: The Vanishing of Will Byers"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        />
    <TextView
        android:id="@+id/ep_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="49 mins"
        android:layout_marginStart="-170dp"
        android:layout_marginTop="62dp"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        />
    <ImageView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/downlod_arrow"/>

    <TextView
        android:id="@+id/ep_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-320dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:text="On his way home from a friendâ€™s house, young Will sees something terrifying. Nearby, a sinister secret lurks in the depths of a government lab."
        android:textSize="10sp"/>
</LinearLayout>